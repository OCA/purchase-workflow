<?xml version="1.0" encoding="utf-8" ?>
<odoo>

    <record id="res_config_settings_view_form_sale" model="ir.ui.view">
        <field
            name="name"
        >res.config.settings.view.form.inherit.purchase.request.group.sale</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="stock.res_config_settings_view_form" />
        <field name="arch" type="xml">
            <xpath expr="//div[@id='warning_info']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="groupping_info">
                    <div class="o_setting_left_pane">
                        <field name="company_group_purchase_request" />
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="company_group_purchase_request" />
                        <div class="text-muted">
                            Group purchase request for same day by product
                        </div>
                    </div>
                </div>
             </xpath>
        </field>
    </record>

</odoo>
