<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="view_purchase_configuration" model="ir.ui.view">
      <field name="name">internal validation purchase settings</field>
      <field name="model">purchase.config.settings</field>
      <field name="inherit_id" ref="purchase.view_purchase_configuration" />
      <field name="arch" type="xml">
        <xpath expr="//label[@string='Purchase Order']/ancestor::group/div" position="inside">
          <div>
            <label for="limit_amount" />
            <field name="limit_amount" nolabel="1" class="oe_inline" />
          </div>
        </xpath>
      </field>
    </record>
  </data>
</openerp>
