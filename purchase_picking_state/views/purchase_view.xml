<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="modified_purchase_order_form" model="ir.ui.view">
            <field name="name">purchase.order.form</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='currency_id']" position="after">
                    <field name="picking_state" attrs="{'invisible':[('picking_state','=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <record id="modified_purchase_order_kpis_tree" model="ir.ui.view">
            <field name="name">purchase.order.kpis.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="after">
                    <field name="picking_state" optional="show" attrs="{'invisible':[('picking_state','=', 'draft')]}"/>
                </xpath>
            </field>
        </record>

        <record id="modified_purchase_order_tree" model="ir.ui.view">
            <field name="name">purchase.order.tree</field>
            <field name="model">purchase.order</field>
            <field name="inherit_id" ref="purchase.purchase_order_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='invoice_status']" position="after">
                    <field name="picking_state" optional="show" attrs="{'invisible':[('picking_state','=', 'draft')]}"/>
                </xpath>
            </field>
        </record>
    </data>

</odoo>
