<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="agreement_in_product_view" model="ir.ui.view">
      <field name="name">agreement in product view</field>
      <field name="model">product.product</field>
      <field name="inherit_id" ref="product.product_normal_form_view"/>
      <field name="arch" type="xml">
        <field name="seller_ids" position="after">
          <group string="Framework agreements (LTA)" colspan="4">
            <field name="framework_agreement_ids" nolabel="1" context="{'on_product_form': True}" />
          </group>
        </field>
      </field>
    </record>
  </data>
</openerp>
