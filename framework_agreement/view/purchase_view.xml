<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>

    <record id="add_onchange_on_pruchase_order_form" model="ir.ui.view">
      <field name="name">purchase_order_form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">

        <field name="pricelist_id" position="before">
          <field name="portfolio_id" />
        </field>

        <field name="pricelist_id" position="attributes">
          <attribute name="on_change" eval="1"/>
          <attribute name="domain">[('type','=','purchase'), ('portfolio_id', '=', portfolio_id)]</attribute>
        </field>

        <field name="partner_id" position="attributes">
          <attribute name="context_agreement">{'portfolio_id': portfolio_id}</attribute>
        </field>

        <field name="picking_type_id" position="attributes">
          <attribute name="attrs">{'readonly': [('portfolio_id', '!=', False)]}</attribute>
        </field>

        <field name="incoterm_id" position="attributes">
          <attribute name="attrs">{'readonly': [('portfolio_id', '!=', False)]}</attribute>
        </field>

      </field>
    </record>

  </data>
</openerp>
