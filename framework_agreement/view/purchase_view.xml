<?xml version="1.0" encoding="utf-8"?>
<openerp>
  <data>
    <record id="add_onchange_on_pruchase_order_lin_form" model="ir.ui.view">
      <field name="name">add onchange on pruchase line form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_form" />
      <field name="arch" type="xml">
        <field name="price_unit" position="replace">
          <field name="price_unit"
                 on_change="onchange_price(price_unit, parent.framework_agreement_id, product_qty, parent.pricelist_id)"/>
        </field>
          <field name="pricelist_id" position="after">
            <field name="framework_agreement_id"
                   on_change="onchange_agreement(framework_agreement_id)"/>
        </field>
      </field>
    </record>

    <record id="add_onchange_on_pruchase_order_line_form_standalone" model="ir.ui.view">
      <field name="name">add onchange on pruchase order line form standalone</field>
      <field name="model">purchase.order.line</field>
      <field name="inherit_id" ref="purchase.purchase_order_line_form" />
      <field name="arch" type="xml">
        <field name="price_unit" position="replace">
          <field name="price_unit"
                 on_change="onchange_price(price_unit, parent.framework_agreement_id, product_qty, parent.pricelist_id)"/>
        </field>
      </field>
    </record>

  </data>
</openerp>
