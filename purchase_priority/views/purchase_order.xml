<odoo>

    <record model="ir.ui.view" id="purchase_order_form_view">
        <field name="name">purchase.order.form (in purchase_priority)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <field name="date_order" position="before">
                <field name="priority" widget="priority"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_order_search_view">
        <field name="name">purchase.order.search (in purchase_priority)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <filter name="activities_upcoming_all" position="after">
                <filter string="High Priority" name="high_priority" domain="[('priority','in', ['2', '3'])]"/>
            </filter>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_order_tree_view">
        <field name="name">purchase.order.tree (in purchase_priority)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_tree"/>
        <field name="arch" type="xml">
            <field name="state" position="after">
                <field name="priority" widget="priority"/>
            </field>
        </field>
    </record>

    <record model="ir.ui.view" id="purchase_order_kanban_view">
        <field name="name">purchase.order.kanban (in purchase_priority)</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_kanban"/>
        <field name="arch" type="xml">
            <field name="currency_id" position="after">
                <field name="priority" widget="priority"/>
            </field>
            <xpath expr="//div[hasclass('oe_kanban_bottom_right')]" position="inside">
                <field name="priority" widget="priority"/>
            </xpath>
        </field>
    </record>

</odoo>
