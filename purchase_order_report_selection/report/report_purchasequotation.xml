<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <template
        id="report_purchasequotation_document_fields"
        inherit_id="purchase.report_purchasequotation_document"
    >
    <xpath expr="//table/thead/tr" position="attributes">
            <attribute name="style">display:none;</attribute>
    </xpath>
        <xpath expr="//table/thead/tr" position="after">
            <t t-if="o.report_field_ids.count_rfq_fields() &gt; 0">
                <tr>
                    <t
                        t-foreach="o.report_field_ids.sorted(lambda l: l.sequence)"
                        t-as="report_field"
                    >
                        <t
                            t-if="o.state == 'draft' and report_field.is_show_rfq == True"
                        >
                            <th
                                t-attf-name="th-{{report_field.field_id.field_description}}"
                            >
                                <strong>
                                    <t
                                        t-esc="report_field.field_id.field_description"
                                    />
                                </strong>
                            </th>
                        </t>
                        <t
                            t-elif="o.state in ['sent', 'to approve','purchase','done'] and report_field.is_show_rfq == True"
                        >
                            <th
                                t-attf-name="th-{{report_field.field_id.field_description}}"
                            >
                                <strong>
                                    <t
                                        t-esc="report_field.field_id.field_description"
                                    />
                                </strong>
                            </th>
                        </t>
                    </t>
                </tr>
            </t>
            <t t-else="">
                <tr>
                    <th name="th_description"><strong>Description</strong></th>
                    <th name="th_expected_date" class="text-center"><strong
                        >Expected Date</strong></th>
                    <th name="th_quantity" class="text-right"><strong>Qty</strong></th>
                </tr>
            </t>
        </xpath>



        <xpath expr="//table/tbody" position="attributes">
            <attribute name="style">display:none;</attribute>
        </xpath>

        <xpath expr="//table/tbody" position="after">
            <t t-if="o.report_field_ids.count_rfq_fields() &gt; 0">
                <t t-foreach="o.order_line" t-as="line">
                    <tr
                        t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''"
                    >
                        <t
                            t-foreach="o.report_field_ids.sorted(lambda l: l.sequence)"
                            t-as="report_field"
                        >
                            <t
                                t-if="o.state == 'draft' and report_field.is_show_rfq == True"
                            >
                                <td
                                    t-attf-id="{{report_field.field_id.field_description}}"
                                >
                                <t t-if="report_field.field_id.ttype=='binary'">
                                    <span
                                            t-esc="line.get_field_data(report_field.field_id.name)"
                                            t-options='{"widget": "image"}'
                                            class="custom_product_image"
                                            style="height:20px !important; max-height:20px !important; width:15px !important; max-width:15px !important;"
                                        />
                                </t>
                                <t t-else="">
                                    <span
                                            t-esc="line.get_field_data(report_field.field_id.name)"
                                        />
                                </t>
                                </td>
                            </t>
                            <t
                                t-elif="o.state in ['sent', 'to approve','purchase','done'] and report_field.is_show_rfq == True"
                            >
                                <t t-set="field" t-value="report_field.field_id.name" />
                                <td
                                    t-attf-id="{{report_field.field_id.field_description}}"
                                >
                                <t t-if="report_field.field_id.ttype=='binary'">
                                    <span
                                            t-esc="line.get_field_data(report_field.field_id.name)"
                                            t-options='{"widget": "image"}'
                                            class="custom_product_image"
                                            style="height:20px !important; max-height:20px !important; width:15px !important; max-width:15px !important;"
                                        />
                                </t>
                                <t t-else="">
                                    <span
                                            t-esc="line.get_field_data(report_field.field_id.name)"
                                        />
                                </t>
                                </td>
                            </t>
                        </t>
                    </tr>
                </t>
            </t>
            <t t-else="">
                <t t-foreach="o.order_line" t-as="order_line">
                    <tr
                        t-att-class="'bg-200 font-weight-bold o_line_section' if order_line.display_type == 'line_section' else 'font-italic o_line_note' if order_line.display_type == 'line_note' else ''"
                    >
                        <t t-if="not order_line.display_type">
                            <td id="product">
                                <span t-field="order_line.name" />
                            </td>
                            <td class="text-center">
                                <span t-field="order_line.date_planned" />
                            </td>
                            <td class="text-right">
                                <span t-field="order_line.product_qty" />
                                <span
                                    t-field="order_line.product_uom"
                                    groups="uom.group_uom"
                                />
                            </td>
                        </t>
                        <t t-else="">
                            <td colspan="99" id="section">
                                <span t-field="order_line.name" />
                            </td>
                        </t>
                    </tr>
                </t>
            </t>
        </xpath>
    </template>
</odoo>
