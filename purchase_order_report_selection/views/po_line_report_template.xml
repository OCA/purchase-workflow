<?xml version='1.0' encoding='utf-8' ?>
<odoo>
    <record id="form_po_line_report_tmpl" model="ir.ui.view">
        <field name="name">po.line.report.template.view.form</field>
        <field name="model">po.line.report.template</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <group>
                    <field name="name" />
                    <field name="report_field_ids">
                    <tree editable="bottom">
                        <field name="sequence" widget="handle" />
                        <field
                                    name="field_id"
                                    required="1"
                                    options="{'no_create_edit': True}"
                                />
                        <field name="is_show_rfq" />
                        <field name="is_show_po" />
                    </tree>
                </field>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="list_po_line_report_tmpl" model="ir.ui.view">
        <field name="name">po_line_report_tmpl.view.tree</field>
        <field name="model">po.line.report.template</field>
        <field name="arch" type="xml">
            <tree string="">
                  <field name="name" />
                  <field name="report_field_ids" />
            </tree>
        </field>
    </record>

    <record id="action_po_line_report_tmpl" model="ir.actions.act_window">
        <field name="name">PO lines report template</field>
        <field name="res_model">po.line.report.template</field>
        <field name="view_mode">tree,form</field>

    </record>
</odoo>
