<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <!--<data noupdate="1">-->
    <data>
        <record model="stock.config.settings" id="stock_config_settings_defaults">
            <field name="group_stock_multiple_locations">1</field>
            <field name="group_stock_adv_location">1</field>
        </record>
        <function
            model="stock.config.settings"
            name="execute"
            eval="[[ref('stock_config_settings_defaults')]]" />

        <!--##### Calendars #####-->
        <record model="resource.calendar" id="demo_calendar_1">
            <field name="name">Demo Calendar 1</field>
        </record>

        <record model="resource.calendar.attendance" id="demo_calendar_1_monday">
            <field name="name">Monday</field>
            <field name="dayofweek">0</field>
            <field name="hour_from" eval="8"/>
            <field name="hour_to" eval="18"/>
            <field name="calendar_id" ref="demo_calendar_1"/>
        </record>

        <record model="resource.calendar.attendance" id="demo_calendar_1_wednesday">
            <field name="name">Wednesday</field>
            <field name="dayofweek">2</field>
            <field name="hour_from" eval="8"/>
            <field name="hour_to" eval="18"/>
            <field name="calendar_id" ref="demo_calendar_1"/>
        </record>

        <record id="demo_leave_1" model="resource.calendar.leaves">
            <field name="name">Leave january 2015</field>
            <field name="date_from">2015-01-27 00:00:00</field>
            <field name="date_to">2015-01-31 00:00:00</field>
            <field name="calendar_id" ref="demo_calendar_1"/>
        </record>

        <!-- #### Procurements ###### -->
        <record id="stock_location_a" model="stock.location">
            <field name="name">Location A</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="active">1</field>
            <field name="usage">internal</field>
        </record>

        <record id="stock_location_b" model="stock.location">
            <field name="name">Location B</field>
            <field name="location_id" ref="stock.stock_location_locations"/>
            <field name="active">1</field>
            <field name="usage">internal</field>
        </record>

        <record id="product_test_product" model="product.product">
            <field name="name">Test Product</field>
            <field name="default_code">TP</field>
            <field name="type">product</field>
            <field name="route_ids" eval="[(4,ref('purchase.route_warehouse0_buy'))]"/>
        </record>

        <record id="product_test_product_raw" model="product.product">
            <field name="name">Test Raw material</field>
            <field name="default_code">TRM</field>
            <field name="type">product</field>
            <field name="route_ids" eval="[(4,ref('purchase.route_warehouse0_buy'))]"/>
        </record>

        <record model="res.partner" id="test_supplier">
            <field name="name">Test Supplier</field>
            <field name="customer"/>
            <field name="supplier">1</field>
        </record>

        <record id="product_supplier_info_test" model="product.supplierinfo">
            <field name="name" ref="test_supplier"/>
            <field name="product_tmpl_id" ref="product_test_product_product_template"/>
            <field name="min_qty" eval="1"/>
            <field name="delay" eval="7"/>
            <field name="sequence" eval="1"/>
        </record>

        <record id="product_test_product_mo" model="product.product">
            <field name="name">Test Product to produce</field>
            <field name="default_code">TPP</field>
            <field name="type">product</field>
            <field name="produce_delay" eval="6"/>
            <field name="route_ids" eval="[(4,ref('mrp.route_warehouse0_manufacture'))]"/>
        </record>

        <record id="bom_test_mo" model="mrp.bom">
            <field name="product_tmpl_id" ref="procurement_working_days.product_test_product_mo_product_template"/>
            <field name="name">Test product to produce BoM</field>
            <field name="product_qty" eval="1"/>
            <field name="type">normal</field>
        </record>

        <record id="test_bom_line_1" model="mrp.bom.line">
            <field name="bom_id" ref="bom_test_mo"/>
            <field name="sequence" eval="1"/>
            <field name="product_id" ref="product_test_product"/>
            <field name="type">normal</field>
            <field name="product_qty" eval="2"/>
        </record>

        <record id="test_bom_line_2" model="mrp.bom.line">
            <field name="bom_id" ref="bom_test_mo"/>
            <field name="sequence" eval="2"/>
            <field name="product_id" ref="product_test_product_raw"/>
            <field name="type">normal</field>
            <field name="product_qty" eval="5"/>
        </record>

        <record model="procurement.rule" id="procurement_rule_a_to_b">
            <field name="name">A => B</field>
            <field name="active">1</field>
            <field name="action">move</field>
            <field name="location_id" ref="stock_location_b"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="route_id" ref="purchase.route_warehouse0_buy"/>
            <field name="group_propagation_option">propagate</field>
            <field name="propagate">1</field>
            <field name="picking_type_id" ref="stock.picking_type_internal"/>
            <field name="procure_method">make_to_order</field>
            <field name="delay">5</field>
            <field name="location_src_id" ref="stock_location_a"/>
        </record>

        <record model="procurement.rule" id="procurement_rule_buy_in_a">
            <field name="name">Buy in A</field>
            <field name="active">1</field>
            <field name="action">buy</field>
            <field name="location_id" ref="stock_location_a"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="route_id" ref="purchase.route_warehouse0_buy"/>
            <field name="group_propagation_option">propagate</field>
            <field name="propagate">1</field>
            <field name="picking_type_id" ref="stock.picking_type_in"/>
        </record>

        <record model="procurement.rule" id="procurement_rule_produce_in_b">
            <field name="name">Produce in B</field>
            <field name="active">1</field>
            <field name="action">manufacture</field>
            <field name="location_id" ref="stock_location_b"/>
            <field name="warehouse_id" ref="stock.warehouse0"/>
            <field name="route_id" ref="mrp.route_warehouse0_manufacture"/>
            <field name="group_propagation_option">propagate</field>
            <field name="propagate">1</field>
            <field name="picking_type_id" ref="stock.picking_type_internal"/>
        </record>

    </data>
</openerp>