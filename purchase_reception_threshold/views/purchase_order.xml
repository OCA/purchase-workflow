<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field type="xml" name="arch">
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='price_subtotal']"
                position="before"
            >
                <field
                    name="receipt_threshold"
                    optional="hide"
                    widget="percentage"
                    groups="purchase.group_purchase_manager"
                />
                <field
                    name="use_threshold"
                    optional="hide"
                    widget="boolean_toggle"
                    groups="purchase.group_purchase_manager"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//form//group/group[last()]"
                position="after"
            >
                <group groups="purchase.group_purchase_manager">
                    <field name="receipt_threshold" widget="percentage" />
                    <field name="use_threshold" widget="boolean_toggle" />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
