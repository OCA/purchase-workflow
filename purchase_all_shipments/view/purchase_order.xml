<?xml version="1.0"?>
<openerp>
  <data>

    <record id="purchase_order_2_stock_picking" model="ir.ui.view">
      <field name="name">purchase_order_form</field>
      <field name="model">purchase.order</field>
      <field name="inherit_id" ref="purchase.purchase_order_2_stock_picking"/>
      <field name="arch" type="xml">

        <button name="invoice_open" position="before">
          <button type="object"
            name="view_all_picking"
            class="oe_stat_button"
            icon="fa-truck"
            attrs="{'invisible': [('all_shipment_count', '=', 0)]}">
            <field name="all_shipment_count" widget="statinfo" string="All Shipments" help="All Shipments, including chained"/>
          </button>
        </button>

        <!-- xpath needed because of odoo/odoo#5247 -->
        <xpath expr="//div[@name='buttons']/button[@name='view_picking']" position="attributes">
          <attribute name="invisible">1</attribute>
        </xpath>

      </field>
    </record>

  </data>
</openerp>
