<odoo>

    <record id="purchase_order_form" model="ir.ui.view">
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='amount_untaxed']" position="before">
                <div
                    class="oe_subtotal_footer oe_inline o_td_label"
                    name="general_discount"
                >
                    <label for="general_discount" />
                    <button
                        name="action_update_general_discount"
                        class="oe_link oe_edit_only fa fa-refresh"
                        type="object"
                        help="Update general discounts"
                    />
                </div>
                <field name="general_discount" class="oe_subtotal_footer" nolabel="1" />
            </xpath>
        </field>
    </record>

</odoo>
