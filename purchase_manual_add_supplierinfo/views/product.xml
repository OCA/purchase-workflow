<odoo>
    <record id="product_supplierinfo_form_view" model="ir.ui.view">
        <field name="model">product.supplierinfo</field>
        <field name="inherit_id" ref="product.product_supplierinfo_form_view" />
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="after">
                <footer
                    invisible="not context.get('update_from_po_id') and not context.get('update_from_po_line_id')"
                >
                   <button
                        name="update_from_purchase_skip"
                        string="Ignore"
                        type="object"
                        class="btn-danger"
                    />
                   <button
                        name="update_from_purchase"
                        string="Confirm"
                        type="object"
                        class="btn-primary"
                    />
                    <button
                        name="cancel"
                        string="Cancel"
                        class="btn-secondary"
                        type="object"
                        special="cancel"
                    />
                </footer>
            </xpath>
        </field>
    </record>
</odoo>
