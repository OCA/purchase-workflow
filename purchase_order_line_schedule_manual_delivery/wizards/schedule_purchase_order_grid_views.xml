<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="schedule_purchase_order_grid_form" model="ir.ui.view">
        <field name="name">schedule.purchase.order.grid.form</field>
        <field name="model">schedule.purchase.order.grid</field>
        <field name="arch" type="xml">
            <form string="Schedule Order">
                <group name="schedule" string="Delivery Schedule">
                    <field
                        name="line_ids"
                        nolabel="1"
                        widget="x2many_2d_matrix"
                        field_x_axis="value_x"
                        field_y_axis="value_y"
                        field_value="product_qty"
                        x_axis_clickable="0"
                        y_axis_clickable="0"
                    >
                        <tree editable="bottom">
                            <field name="value_x" />
                            <field name="value_y" />
                            <field name="product_qty" />
                        </tree>
                    </field>
                </group>
                <footer>
                    <button
                        name="update_schedule_lines"
                        type="object"
                        string="Validate"
                        class="oe_highlight"
                    />
                    <button class="oe_link" special="cancel" string="Cancel" />
                </footer>
            </form>
        </field>
    </record>
</odoo>
