<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="purchase_order_weight_form" model="ir.ui.view">
        <field name="name">purchase.order.weight.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//notebook/page/field[@name='order_line']/tree/field[@name='product_uom']" position="after">
                <field name="weight_total"/>
            </xpath>
        </field>
    </record>
</odoo>
