<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_import_product_to_purchase" model="ir.ui.view">
        <field name="name">import.products.to.purchase.form</field>
        <field name="model">purchase.import.products</field>
        <field name="arch" type="xml">
            <form string="Products">
                <field name="products" domain="[('purchase_ok', '=', True)]">
                    <!-- Force create="1" because if the user doesn't have access right to create new products, -->
                    <!-- he won't be able to select some products. -->
                    <tree create="1">
                        <field name="default_code" optional="show" readonly="1" />
                        <field name="barcode" optional="hide" readonly="1" />
                        <field name="name" readonly="1" />
                        <field
                            name="company_id"
                            groups="base.group_multi_company"
                            optional="hide"
                            readonly="1"
                        />
                        <field name="categ_id" optional="hide" />
                        <field name="type" optional="hide" readonly="1" />
                        <field
                            name="price"
                            invisible="not context.get('pricelist',False)"
                        />
                        <field name="product_tmpl_id" invisible="1" readonly="1" />
                        <field name="active" invisible="1" />
                    </tree>
                </field>
                <footer>
                    <button
                        name="create_items"
                        string="Set quantities"
                        type="object"
                        class="oe_highlight"
                    />
                    or
                    <button string="Cancel" class="oe_link" special="cancel" />
                </footer>
            </form>
        </field>
    </record>
    <record id="view_import_product_to_purchase2" model="ir.ui.view">
        <field name="name">import.products.to.purchase.form2</field>
        <field name="model">purchase.import.products</field>
        <field name="arch" type="xml">
            <form string="Products">
                <field name="items">
                    <tree create="0" editable="bottom">
                        <field name="product_id" readonly="1" />
                        <field name="quantity" />
                    </tree>
                </field>
                <footer>
                <button
                        name="select_products"
                        string="Select"
                        type="object"
                        class="oe_highlight"
                    />
                or
                <button string="Cancel" class="oe_link" special="cancel" />
            </footer>
            </form>
        </field>
    </record>
    <record id="action_import_product_to_purchase" model="ir.actions.act_window">
        <field name="name">Import Products</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.import.products</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_import_product_to_purchase" />
        <field name="target">new</field>
    </record>
</odoo>
