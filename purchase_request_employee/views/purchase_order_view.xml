<odoo>
    <record id="purchase_order_view_form" model="ir.ui.view">
        <field name="name">purchase.order.view.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='user_id']" position="after">
                <field
                    name="requested_employee_ids"
                    widget="many2many_avatar_employee"
                    attrs="{'invisible': [('requested_employee_ids', '=', [])]}"
                />
            </xpath>
        </field>
    </record>
    <record id="purchase_order_view_search" model="ir.ui.view">
        <field name="name">purchase.order.view.search</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//filter[@name='representative']" position="after">
                <filter
                    string="Requested by Employee"
                    name="requested_employee_ids"
                    context="{'group_by': 'requested_employee_ids'}"
                />
            </xpath>
            <xpath expr="//field[@name='user_id']" position="after">
                <field name="requested_employee_ids" />
            </xpath>
        </field>
    </record>
</odoo>
