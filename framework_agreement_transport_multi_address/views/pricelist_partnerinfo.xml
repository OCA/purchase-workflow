<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="prices_tree" model="ir.ui.view">
            <field name="name">prices_tree</field>
            <field name="model">pricelist.partnerinfo</field>
            <field name="inherit_id" ref="framework_agreement.prices_tree" />
            <field name="arch" type="xml">
                <field name="incoterm_address" position="after">
                    <field name="origin_address_id" />
                </field>
            </field>
        </record>

        <record id="prices_search" model="ir.ui.view">
            <field name="name">prices_search</field>
            <field name="model">pricelist.partnerinfo</field>
            <field name="inherit_id" ref="framework_agreement.prices_search" />
            <field name="arch" type="xml">
                <field name="incoterm_address" position="after">
                    <field name="origin_address_id" />
                </field>

                <filter string='Incoterm Address' position="after">
                    <filter string='Origin Address' domain="[]" context="{'group_by' : 'origin_address_id'}"/>
                </filter>
            </field>
        </record>
                
    </data>
</openerp>
