<odoo>
    <record model="ir.ui.view" id="purchase_order_form_view_inherit_po_department">
        <field name="name">purchase.order.form.filter.product.depertment</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form" />
        <field name="arch" type="xml">
            <xpath
                expr="//field[@name='order_line']/tree/field[@name='product_id']"
                position='attributes'
            >
                <attribute
                    name="context"
                >{'purchase_order': True,'partner_id':parent.partner_id, 'quantity':product_qty,'uom':product_uom, 'company_id': parent.company_id}</attribute>
            </xpath>
        </field>
    </record>
</odoo>
