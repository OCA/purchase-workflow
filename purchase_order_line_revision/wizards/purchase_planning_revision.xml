<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

      <record id="purchase_planning_revision_view" model="ir.ui.view">
        <field name="name">Purchase Order Planning Revision</field>
        <field name="model">purchase.planning.revision</field>
        <field name="arch" type="xml">
          <form string="Purchase Order Planning Revision">
            <group>
              <field name="order_id"/>
              <field name="configurator_id"/>
              <field name="target"/>
              <field name="received_qty"/>
              <field name="effective_date"/>
              <field name="revision_factor"/>
              <field name="new_target"/>
              <field name="description"/>
            </group>
            <footer>
              <button string="Validate" name="validate" type="object"
                      class="oe_highlight"/>
              or
              <button string="Cancel" class="oe_link" special="cancel"/>
            </footer>
          </form>
        </field>
      </record>

      <record id="purchase_planning_revision_action" model="ir.actions.act_window">
        <field name="name">Purchase Order Planning Revision</field>
        <field name="res_model">purchase.planning.revision</field>
        <field name="view_type">form</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="purchase_planning_revision_view"/>
        <field name="target">new</field>
      </record>

      <menuitem
              id="purchase_planning_revision_action_menu"
              name="Purchase Order Planning Revision"
              parent="base.menu_purchase_root"
              sequence="2"/>
      <menuitem
              id="purchase_planning_revision_action_submenu"
              name="Purchase Order Planning Revision"
              parent="purchase_planning_revision_action_menu"
              action="purchase_planning_revision_action"/>

    </data>
</openerp>
