<odoo>
    <record id="supplier_approval_wizard_view_form" model="ir.ui.view">
        <field name="name">supplier.approval.wizard.form</field>
        <field name="model">supplier.approval.wizard</field>
        <field name="arch" type="xml">
            <form string="Approve">
                <group>
                    <field name="supplier_approve_status"/>
                </group>
                <footer>
                    <button name="confirm_button" type="object" string="Confirm" class="oe_highlight"/>
                    <button string="Cancel" class="oe_right" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
