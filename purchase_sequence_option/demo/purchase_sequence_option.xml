<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>

        <record id="seq_purchase_option_1" model="ir.sequence">
            <field name="name">Purchase Order: Option 1</field>
            <field name="padding" eval="5" />
            <field name="prefix">PO-1/</field>
        </record>

        <record id="purchase_sequence" model="base.sequence.option">
            <field name="name">Purchase Order</field>
            <field name="model">purchase.order</field>
            <field name="use_sequence_option" eval="False" />
        </record>

        <record id="purchase_sequence_option_1" model="sequence.option">
            <field name="base_id" ref="purchase_sequence" />
            <field name="name">PO Option 1</field>
            <field name="filter_domain">[]</field>
            <field
                name="sequence_id"
                ref="purchase_sequence_option.seq_purchase_option_1"
            />
        </record>

    </data>
</odoo>
