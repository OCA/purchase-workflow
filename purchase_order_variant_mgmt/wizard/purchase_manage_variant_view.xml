<odoo>

  <record id="purchase_manage_variant_form" model="ir.ui.view">
    <field name="model">purchase.manage.variant</field>
    <field name="arch" type="xml">
      <form string="Manage Product Variants">
        <group>
          <field name="id"/>
          <field name="purchase_order_id"/>
          <field name="product_tmpl_id"
                 required="True"
                 domain="[('attribute_line_ids', '!=', False)]"
                 options="{'no_create': True}"/>
        </group>
        <field name="variant_line_ids"
               widget="x2many_2d_matrix"
               field_x_axis="value_x"
               field_y_axis="value_y"
               field_value = "product_uom_qty"
               field_att_disabled="disabled"
               x_axis_clickable="0"
               y_axis_clickable="0"
        />
        <footer>
          <button name="button_transfer_to_order"
                  type="object"
                  string="Transfer to order"
                  class="oe_highlight"
          />
          <button class="oe_link"
                  special="cancel"
                  string="Cancel"
          />
        </footer>
      </form>
    </field>
  </record>

  <!-- this is used by v11 JS framework's basic_renderer -->
  <record id="view_purchase_manage_variant_line_tree" model="ir.ui.view">
    <field name="name">purchase.manage.variant.line.tree</field>
    <field name="model">purchase.manage.variant.line</field>
    <field name="arch" type="xml">
      <tree>
        <field name="product_id"/>
        <field name="product_uom_qty"/>
        <field name="value_x"/>
        <field name="value_y"/>
        <field name="disabled"/>
      </tree>
    </field>
  </record>

  <record model="ir.actions.act_window" id="action_purchase_manage_variant">
    <field name="name">Manage variants</field>
    <field name="res_model">purchase.manage.variant</field>
    <field name="view_mode">form</field>
    <field name="view_type">form</field>
    <field name="target">new</field>
  </record>

</odoo>
