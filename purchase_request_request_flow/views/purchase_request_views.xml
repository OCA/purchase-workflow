<odoo>
    <record id="view_purchase_request_form" model="ir.ui.view">
        <field name="name">view.purchase.request.form</field>
        <field name="model">purchase.request</field>
        <field name="inherit_id" ref="purchase_request.view_purchase_request_form" />
        <field name="arch" type="xml">
            <header position="after">
                <div
                    class="alert alert-warning"
                    role="alert"
                    attrs="{'invisible': ['|', ('state', '!=', 'to_approve'), ('ref_request_id', '=', False)]}"
                    style="margin-bottom:0px;"
                >
                    <p><i
                            class="fa fa-clipboard"
                        /> This document will be set to "Approved" when the Request is approved.</p>
                </div>
            </header>
            <xpath expr="/form/sheet/group/group" position="inside">
                <field name="ref_request_id" invisible="1" />
            </xpath>
            <xpath expr="//div[@name='button_box']" position="inside">
                <button
                    name="action_open_request"
                    string="Requests"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-clipboard"
                    attrs="{'invisible': [('ref_request_id', '=', False)]}"
                />
            </xpath>
            <xpath
                expr="//form/sheet/group/group/field[@name='product_id']"
                position="before"
            >
                <field name="ref_request_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
