<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record
        id="product_template_subcontracted_service_product_view_form"
        model="ir.ui.view"
    >
        <field
            name="name"
        >product_template_subcontracted_service_product_view_form</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view" />
        <field name="arch" type="xml">
            <page name="inventory" position="inside">
                <group name="subcontract" string="Subcontracted service">
                    <field
                        name="subcontracted_product_id"
                        attrs="{'invisible': [('type', '!=', 'product')]}"
                    />
                </group>
            </page>
        </field>
    </record>
</odoo>
