<odoo>
    <record id="view_purchase_make_planned_invoice" model="ir.ui.view">
        <field name="name">view.purchase.make.planned.invoice</field>
        <field name="model">purchase.make.planned.invoice</field>
        <field
            name="inherit_id"
            ref="purchase_invoice_plan.view_purchase_make_planned_invoice"
        />
        <field name="arch" type="xml">
            <footer position="attributes">
                <attribute
                    name="attrs"
                >{'invisible': [('next_bill_method', '=', 'manual')]}</attribute>
            </footer>
            <p position="after">
                <group>
                    <field name="next_bill_method" widget="radio" />
                </group>
                <span attrs="{'invisible': [('next_bill_method', '=', 'auto')]}">
                    <group>
                        <field name="active_installment_ids" invisible="1" />
                        <field
                            name="installment_id"
                            attrs="{'required': [('next_bill_method', '=', 'manual')]}"
                            options="{'no_create': True, 'no_open': True}"
                        />
                        <field
                            name="apply_method_id"
                            style="width:50%"
                            attrs="{'required': [('next_bill_method', '=', 'manual')]}"
                        />
                        <field name="order_id" invisible="1" />
                        <field
                            name="order_line_ids"
                            widget="many2many_tags"
                            style="width:80%"
                            attrs="{'required': [('next_bill_method', '=', 'manual')]}"
                        />
                    </group>
                    <field
                        name="invoice_qty_line_ids"
                        nolabel="1"
                        attrs="{'invisible': [('order_line_ids', '=', [])]}"
                    >
                        <tree editable="bottom" create="0">
                            <field name="currency_id" invisible="1" />
                            <field name="order_id" invisible="1" />
                            <field name="order_line_id" readonly="1" force_save="1" />
                            <field name="qty_not_invoiced" />
                            <field
                                name="quantity"
                                decoration-success="quantity &lt;= qty_not_invoiced"
                                decoration-danger="quantity &gt; qty_not_invoiced"
                            />
                            <field name="amount" sum="Total" />
                        </tree>
                    </field>
                </span>
                <footer attrs="{'invisible': [('next_bill_method', '=', 'auto')]}">
                    <field name="valid_amount" invisible="1" />
                    <button
                        name="create_invoice_by_selection"
                        string="Create Bill by Selection"
                        type="object"
                        class="oe_highlight"
                        context="{'create_wa': True}"
                        attrs="{'invisible': [('valid_amount', '=', False), ('order_line_ids', '!=', [])]}"
                    />
                    <button
                        name="create_invoice_by_selection"
                        string="Create Bill by Selection"
                        type="object"
                        class="oe_highlight"
                        context="{'create_wa': True}"
                        attrs="{'invisible': ['|', ('valid_amount', '=', True), ('order_line_ids', '=', [])]}"
                        confirm="Total amount not equal to installment amount, are you sure to continue?"
                    />
                    <button string="Cancel" class="btn-default" special="cancel" />
                </footer>
            </p>
        </field>
    </record>
</odoo>
