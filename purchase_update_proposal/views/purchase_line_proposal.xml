<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>

    <record id="purchase_line_proposal_tree" model="ir.ui.view">
        <field name="model">purchase.line.proposal</field>
        <field name="arch" type="xml">
            <tree editable="bottom" fonts="bold:qty!=product_qty">
                <field name="line_id_" string="ID"/>
                <field name="product_id" />
                <field name="qty" />
                <field name="date" />
                <field name="price_u" />
                <field name="product_qty" />
                <field name="date_planned" />
                <field name="price_unit" />
                <field name="line_id" invisible="1"/>
                <field name="order_id" invisible="1"/>
            </tree>
        </field>
    </record>

</data>
</openerp>
