<openerp>
<data>

    <record id="group_supplier_own_purchase" model="res.groups">
        <field name="name">Supplier: see its own purchases</field>
        <field name="category_id" ref="base.module_category_purchase_management"/>
    </record>
    <record id="group_purchase_proposal_user" model="res.groups">
        <field name="name">Internal Purchase Proposal</field>
        <field name="category_id" ref="base.module_category_purchase_management"/>
    </record>

    <record id="base.menu_purchase_root" model="ir.ui.menu">
        <field name="groups_id" eval="[(4, ref('group_purchase_proposal_user'))]"/>
    </record>

    <record id="purchase.group_purchase_user" model="res.groups">
        <field name="implied_ids" eval="[(4, ref('group_purchase_proposal_user'))]"/>
    </record>

    <record model="ir.rule" id="purchase_supplier_rule">
        <field name="name">Supplier own purchase orders</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="global" eval="False"/>
        <field name="domain_force">[('partner_id', 'child_of', user.partner_id.id)]</field>
        <field name="groups" eval="[(4, ref('group_supplier_own_purchase'))]"/>
    </record>

</data>
</openerp>
