<odoo>
    <record id="view_purchase_requisition_form" model="ir.ui.view">
        <field name="name">purchase.requisition.form</field>
        <field name="model">purchase.requisition</field>
        <field
            name="inherit_id"
            ref="purchase_requisition.view_purchase_requisition_form"
        />
        <field name="arch" type="xml">
            <xpath expr="//group/field[@name='currency_id']" position="after">
                <field name="company_currency_id" invisible="1" />
                <field name="currency_diff" invisible="1" />
                <label
                    for="manual_currency"
                    groups="base.group_multi_currency"
                    attrs="{'invisible': [('currency_diff', '=', False)]}"
                />
                <div
                    groups="base.group_multi_currency"
                    attrs="{'invisible': [('currency_diff', '=', False)]}"
                >
                    <field name="manual_currency" />
                    <label for="manual_currency_rate" invisible='1' />
                    <div
                        class="o_row"
                        attrs="{'invisible': [('manual_currency', '=', False)]}"
                    >
                        <field name="manual_currency_rate" />
                        <field
                            name="type_currency"
                            attrs="{'required': [('manual_currency', '=', True)]}"
                        />
                        <button
                            aria-label="Opened"
                            type="object"
                            name="action_refresh_currency"
                            class="btn-link"
                            states="draft"
                        >
                            <i title="Update Currency" class="fa fa-fw fa-refresh" />
                        </button>
                    </div>
                </div>
            </xpath>
            <xpath
                expr="//page[@name='products']/field[@name='line_ids']/tree/field[@name='price_unit']"
                position="after"
            >
                <field
                    name="subtotal_company_currency"
                    attrs="{'column_invisible': [('parent.currency_diff', '=', False)]}"
                />
                <field name="company_currency_id" invisible="1" />
            </xpath>
        </field>
    </record>
</odoo>
