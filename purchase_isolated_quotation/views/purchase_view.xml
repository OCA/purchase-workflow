<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_purchase_order_form" model="ir.ui.view">
        <field name="name">view.purchase.order.form</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/header" position="replace">
                <header name="purchase_order" attrs="{'invisible': [('order_type','=','quotation')]}">
                    <field name="state" widget="statusbar" statusbar_visible="draft,to approve,done" invisible="context.get('order_type', 'purchase') == 'quotation'"/>
                </header>

                <header name="quotation" attrs="{'invisible': [('order_type','=','purchase_order')]}">
                    <button name="action_button_convert_to_order" states="draft" class="oe_highlight" type="object" string="Convert to Order"/>
                    <button name="action_cancel" type="object" states="draft" string="Cancel Quotation"/>
                    <field name="state2" widget="statusbar" statusbar_visible="draft,done" invisible="context.get('order_type', 'purchase_order') == 'purchase_order'"/>
                </header>
            </xpath>
            <field name="partner_id" position="after">
                 <field name="order_type"/>
                 <field name="quote_id" attrs="{'invisible': [('order_type','=','quotation')]}" context="{'order_type': 'quotation'}"/>
                 <field name="order_id" attrs="{'invisible': [('order_type','=','purchase_order')]}" context="{'order_type': 'purchase_order'}"/>
            </field>
            <xpath expr="/form/sheet/notebook/page/field[@name='order_line']" position="attributes">
                  <attribute name="context">{'order_type': order_type}</attribute>
            </xpath>
        </field>
    </record>

    <record id="purchase.purchase_rfq" model="ir.actions.act_window">
        <field name="context">{'order_type': 'quotation',}</field>
        <field name="domain">[('order_type', '=', 'quotation')]</field>
    </record>
    <record id="purchase.purchase_form_action" model="ir.actions.act_window">
        <field name="context">{'order_type': 'purchase_order',}</field>
        <field name="domain">[('order_type', '=', 'purchase_order')]</field>
    </record>
</odoo>
