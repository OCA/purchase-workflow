<odoo>

    <!-- Demo Sequences -->

    <record id="seq_purchase_order_individual" model="ir.sequence">
        <field name="name">Purchase Order (Individual)</field>
        <field name="padding" eval="5" />
        <field name="prefix">POI</field>
    </record>

    <record id="seq_purchase_order_company" model="ir.sequence">
        <field name="name">Purchase Order (Company)</field>
        <field name="padding" eval="5" />
        <field name="prefix">POC</field>
    </record>

    <!-- Demo Options-->

    <record id="seq_purchase_option_1" model="ir.sequence.option.line">
        <field
            name="base_id"
            ref="purchase_order_sequence_option.purchase_sequence_option"
        />
        <field name="name">Purchase Order (Individual)</field>
        <field name="filter_domain">[("partner_id.company_type", "=", "person")]</field>
        <field
            name="sequence_id"
            ref="purchase_order_sequence_option.seq_purchase_order_individual"
        />
    </record>

    <record id="seq_purchase_option_2" model="ir.sequence.option.line">
        <field
            name="base_id"
            ref="purchase_order_sequence_option.purchase_sequence_option"
        />
        <field name="name">Purchase Order (Company)</field>
        <field
            name="filter_domain"
        >[("partner_id.company_type", "=", "company")]</field>
        <field
            name="sequence_id"
            ref="purchase_order_sequence_option.seq_purchase_order_company"
        />
    </record>

</odoo>
