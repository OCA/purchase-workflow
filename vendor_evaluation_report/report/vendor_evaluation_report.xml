<odoo>
    <record id="vendor_evaluation_report_tree_view" model="ir.ui.view">
        <field name="name">vendor.evaluation.report.tree.view</field>
        <field name="model">vendor.evaluation.report</field>
        <field name="arch" type="xml">
            <tree>
                <field name="partner_id" />
                <field name="wa_id" />
                <field name="date_accept" widget="date" />
                <field name="case_id" />
                <field name="score_id" />
                <field name="note" />
            </tree>
        </field>
    </record>
    <record id="vendor_evaluation_report_form_view" model="ir.ui.view">
        <field name="name">vendor.evaluation.report.form.view</field>
        <field name="model">vendor.evaluation.report</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="wa_id" />
                            <field name="date_accept" widget="date" />
                            <field name="case_id" />
                            <field name="score_id" />
                            <field name="note" />
                        </group>
                        <group />
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <record id="vendor_evaluation_report_search_view" model="ir.ui.view">
        <field name="name">vendor.evaluation.report.search.view</field>
        <field name="model">vendor.evaluation.report</field>
        <field name="arch" type="xml">
            <search>
                <field name="partner_id" />
                <field name="wa_id" />
                <field name="case_id" />
                <group expand="1" string="Group By" name="groupby">
                    <filter
                        name="group_partner_id"
                        string="Vendor"
                        context="{'group_by': 'partner_id'}"
                    />
                    <filter
                        name="group_wa_id"
                        string="WA Reference"
                        context="{'group_by': 'wa_id'}"
                    />
                    <filter
                        name="group_case_id"
                        string="Case Name"
                        context="{'group_by': 'case_id'}"
                    />
                </group>
            </search>
        </field>
    </record>
    <record id="vendor_evaluation_report_action" model="ir.actions.act_window">
        <field name="name">Vendor Evaluation Report</field>
        <field name="res_model">vendor.evaluation.report</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_group_partner_id': 1}</field>
    </record>
    <menuitem
        action="vendor_evaluation_report_action"
        id="vendor_evaluation_report_menu"
        name="Vendor Evaluation Report"
        parent="purchase.purchase_report"
        sequence="99"
    />
</odoo>
